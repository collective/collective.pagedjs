
<div>
    <a href="#" id="this-print">PRINT THIS</a>
</div>

<div id="pagedjs-header">
    This is the header content
</div>

<div id="pagedjs-footer">
    This is the footer content
</div>



<style type="text/css">

    @media screen {
        #pagedjs-header,
        #pagedjs-footer {
            display: none
        }   
    }

    @media print {
        * {
            color: red !important;
            font-family: Arial !important;
            font-weight: bold !important;
        }

        #pagedjs-header {
            position: running(header);
        }

        #pagedjs-header {
            position: running(footer);
        }

        @page {
            size: a4;
            margin: 2cm;
            border: 1px solid blue !important;
        }

        @page {
            @top-left {
                content: element(header);
            }

            @top-right {
                content: element(footer);
            }

            @bottom-center {
                content: "HELLO PLONE"
                border: 1px solid green;
            }
        }
    }
</style>


<script type="text/javascript">

    window.PagedConfig = {
        auto: false
    };

    window.addEventListener("load", function () {
        if (document.querySelector('#this-print')) {
            document.querySelector('#this-print').addEventListener("click", preview);
        }
    });


    async function preview() {
        await window.PagedPolyfill.preview();
        window.print();

    }
</script>

<script>
    window.__define = window.define;
    window.__require = window.require;
    window.define = undefined;
    window.require = undefined;
</script>
<script type="application/javascript" type="module" src="https://unpkg.com/pagedjs@0.1.42/dist/paged.polyfill.js"></script>
<script>
    window.define = window.__define;
    window.require = window.__require;
    window.__define = undefined;
    window.__require = undefined;
</script>
